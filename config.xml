<?xml version='1.0' encoding='utf-8'?>
<widget id="com.evoluri.grsoft" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>GRSoft</name>
    <description>
        Aplicativo Motoboy GrSoft.
    </description>
    <author email="dione.mxes@gmail.com" href="https://evoluri.com">
        Dione Max
    </author>
	
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
	<preference name="FadeSplashScreenDuration" value="300" />
	<preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
	
    <platform name="android">
		<preference name="loadUrlTimeoutValue" value="60000" />
		<preference name="android-minSdkVersion" value="14" />
		<preference name="android-targetSdkVersion" value="16" />
		
		
		<preference name="android-minSdkVersion" value="13" />
  <preference name="android-maxSdkVersion" value="16" />
  <preference name="android-targetSdkVersion" value="14" />
   
  
  <preference name="android-installLocation" value="auto" />
  
        <allow-intent href="market:*" />
		
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
